#!/usr/bin/env groovy
node {
    timestamps {
        stage 'Build'
        checkout scm
        sh "gradle clean build"
        publishHTML (target: [
              allowMissing: false,
              alwaysLinkToLastBuild: false,
              keepAll: true,
              reportDir: 'junit',
              reportFiles: 'reports/tests/test/*',
              reportName: "Test Report"
            ])
    }
}
